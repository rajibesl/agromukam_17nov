@model HomepageNewsItemsModel
@if (Model.NewsItems.Count > 0)
{
    <div class="news-list-homepage">
        <div class="title">
            <strong>@T("News")</strong>
        </div>
        <div class="news-items">
            <div class="row">
                @foreach (var item in Model.NewsItems)
                {
                    <div class="news-item col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                        <div class="news-head">
                            <a class="news-title" href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })">@item.Title</a>
                            <span class="news-date">-@item.CreatedOn.ToString("D")</span>
                        </div>
                        <div class="news-body">
                            @Html.Raw(item.Short)
                        </div>
                        <div class="buttons">
                            <a href="@Url.RouteUrl("NewsItem", new { SeName = item.SeName })" class="button-2 btn btn-primary read-more">@T("News.MoreInfo")</a>
                        </div>
                    </div>
                }
                <div class="view-all col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <a href="@Url.RouteUrl("NewsArchive")">@T("News.ViewAll")</a>
                </div>
            </div>
        </div>
    </div>

}