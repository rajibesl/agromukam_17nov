@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="also-purchased-products-grid product-grid">
        <header class="section-heading heading-line">
            <h4 class="title-section">
                <span class="card-title text-white" title="Featured Products" style="color:#212529 !important">
                    @T("Products.AlsoPurchased")
                </span>
            </h4>
        </header>
        <div class="item-grid">
            <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-6 row-cols-xlg-7">
                @foreach (var item in Model)
                {
                    <div class="item-box add-border px-1 py-1">
                         @await Html.PartialAsync("_ProductBox", item)
                    </div>
                }
            </div>
        </div>
    </div>
}