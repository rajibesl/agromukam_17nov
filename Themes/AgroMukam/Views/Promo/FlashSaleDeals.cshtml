@{
    Layout = "_ColumnsTwo";
}

@section Breadcrumb
{
    <section class="common-breadcrumb">
        <nav>
            <div class="container-fluid">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="/" title="Home">Home</a></li>
                    <li class="breadcrumb-item">
                        <a href="@Url.RouteUrl("Promotions")" title="Promotions">
                            Promotions
                        </a>
                    </li>
                    <li class="breadcrumb-item active">
                        <strong class="current-item">Flash Sale Deals</strong>
                    </li>
                </ol>
            </div>
        </nav>
    </section>
}

@section left
{
    <div class="filter-group m-0 p-0">
        <header class="card-header p-2">
            <a href="#" data-toggle="collapse" data-target="#collapse"
               aria-expanded="true">
                <i class="icon-control fa fa-chevron-down"></i>
                <h6 class="text-deep-green">Filtering</h6>
            </a>
        </header>
        <div class="filter-content filtersGroupPanel collapse show" id="collapse">
            <div class="card-body p-4">
                <span> Coming soon... </span>
            </div>
        </div>
    </div>
}

@section PageBanner
{
    <div class="flash-sale-banner" style="background: rgba(105, 164, 31, .3)">
        <div class="container">
            <div class="row">
                <div class="col-6 border-right">
                    <div class="icon-wrapper">
                        <img src="/Plugins/Widgets.AgroProductCollection/Content/images/flash-sale-icon.png" class="d-block ml-auto" style="max-width: 150px;" />
                    </div>
                </div>
                <div class="col-6 d-flex align-items-center  border-left">
                    <div class="countdown-clock d-inline-block d-flex">
                        <div class="days d-flex text-center shadow-sm">
                            <div class="align-self-center w-100">
                                <span class="clock-text">00</span>
                                <span class="clock-label d-none">Days</span>
                            </div>
                        </div>
                        <div class="separator d-flex text-center">
                            <div class="align-self-center w-100">:</div>
                        </div>
                        <div class="hours d-flex text-center shadow-sm">
                            <div class="align-self-center w-100">
                                <span class="clock-text">00</span>
                                <span class="clock-label d-none">Hours</span>
                            </div>
                        </div>
                        <div class="separator d-flex text-center">
                            <div class="align-self-center w-100">:</div>
                        </div>
                        <div class="minutes d-flex text-center shadow-sm">
                            <div class="align-self-center w-100">
                                <span class="clock-text">00</span>
                                <span class="clock-label d-none">Min</span>
                            </div>
                        </div>
                        <div class="separator d-flex text-center">
                            <div class="align-self-center w-100">:</div>
                        </div>
                        <div class="seconds d-flex text-center shadow-sm">
                            <div class="align-self-center w-100">
                                <span class="clock-text">00</span>
                                <span class="clock-label d-none">Sec</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="page flash-sale-deals-page">
    <div class="page-body">
        <div class="card">
            <div class="card-body">
                <p> Fetching flash sale deals, sit tight... </p>
            </div>
        </div>
    </div>
</div>

<script src="/Plugins/Widgets.AgroProductCollection/Scripts/countdown-timer.js" asp-location="Footer"></script>
<script asp-location="Footer">
    $(document).ready(function () {
        $.get('/Promo/FlashSaleDealsAjax', function (data) {
            if (data) {
                $('.flash-sale-deals-page .page-body').html(data);
                const dt = $('#countdownDate').val();
                const deadline = new Date(dt);
                initializeClock('.countdown-clock', deadline);
            }
        });
    });
</script>