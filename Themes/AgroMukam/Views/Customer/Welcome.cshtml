@model CustomerInfoWelcomeModel
@{
    Layout = "_ColumnsTwo";
}

@section left
    {
    @await Html.PartialAsync("_CustomerNavigation", "welcome")
}

<style>
    .i-edit {
        position: absolute;
        top: 15px;
        right: 15px;
    }
</style>

<div class="page account-page customer-info-page">
    <div class="p-title">
        <h5> @T("MyAccount.ManageMyAccount")</h5>
    </div>

    <div class="page-body pt-3" style="min-height: 400px;">

        <div class="row no-gutters">
            <div class="col-md-4 px-1">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6> @T("MyAccount.PersonalProfile") </h6>
                        <div class="i-edit">
                            <a href="@Url.RouteUrl("CustomerInfo")">
                                <i class="fas fa-edit"></i> @T("MyAccount.Edit")
                            </a>
                        </div>

                        <div class="mt-3">
                            <p class="font-weight-bold"> @Model.Name </p>
                            <p class="mb-0"> @Model.Phone </p>
                            <p> @Model.Email </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 px-1">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6> @T("MyAccount.AddressBook") </h6>
                        <div class="i-edit">
                            <a href="@Url.RouteUrl("CustomerAddresses")">
                                <i class="fas fa-edit"></i> @T("MyAccount.Edit")
                            </a>
                        </div>

                        <div class="row no-gutters mt-3">
                            <div class="col-6 px-1">

                                <h6 class="text-muted-x text-capitalize mb-3"> @T("MyAccount.DEFAULTSHIPPINGADDRESS")</h6>

                                @if (Model.DefaultShippingAddress != null)
                                {
                                    <p class="font-weight-bold"> @Model.DefaultShippingAddress.ContactName </p>
                                    <p class="mb-0"> @Model.DefaultShippingAddress.StreetAddress </p>
                                    <p class="mb-0"> @Model.DefaultShippingAddress.AreaName, @Model.DefaultShippingAddress.CityName </p>
                                    <p class="mb-0"> @Model.DefaultShippingAddress.RegionName </p>

                                    <p class="mb-0"> @Model.DefaultShippingAddress.ContactPhone </p>
                                    <p> @Model.DefaultShippingAddress.ContactEmail </p>
                                }
                                else
                                {
                                    <span> @T("MyAccount.NoDefaltShippingAddress") </span>
                                }

                            </div>

                            <div class="col-6 px-1">

                                <h6 class="text-muted-x text-capitalize mb-3"> @T("MyAccount.DEFAULTBILLINGADDRESS") </h6>

                                @if (Model.DefaultBillingAddress != null)
                                {
                                    <p class="font-weight-bold"> @Model.DefaultBillingAddress.ContactName </p>
                                    <p class="mb-0"> @Model.DefaultBillingAddress.StreetAddress </p>
                                    <p class="mb-0"> @Model.DefaultBillingAddress.AreaName, @Model.DefaultBillingAddress.CityName </p>
                                    <p class="mb-0"> @Model.DefaultBillingAddress.RegionName </p>

                                    <p class="mb-0"> @Model.DefaultBillingAddress.ContactPhone </p>
                                    <p> @Model.DefaultBillingAddress.ContactEmail </p>
                                }
                                else
                                {
                            <span> @T("MyAccount.NoDefaltBillingAddress") </span>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    console.log(JSON.parse(`@Json.Serialize(Model)`));
</script>
