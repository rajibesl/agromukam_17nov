@model ProductDetailsModel
@{
    var addtocomparelink = Url.RouteUrl("AddProductToCompare", new { productId = Model.Id });
}
@if (Model.CompareProductsEnabled)
{
    <div class="compare-products">
        <input type="button" value="@T("Products.Compare.AddToCompareList")" class="button-2 btn btn-default add-to-compare-list-button text-light-green" onclick="AjaxCart.addproducttocomparelist('@addtocomparelink');return false;" />
    </div>
}